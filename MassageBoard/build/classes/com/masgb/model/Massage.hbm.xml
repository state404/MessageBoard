<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.masgb.model" default-lazy="false">
	<class name="Massage" table="t_massage" >
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="contentText" type="java.lang.String" length="255"></property>
		<property name="title"  type="java.lang.String"></property>
		<property name="pic"  type="java.lang.String"></property>
		<property name="showTime"  type="java.lang.String"></property>
		<property name="time"  type="java.lang.Long"></property>
		<many-to-one name="user" class="User" column="u_id" cascade="save-update" lazy="false"></many-to-one> 
	</class>
</hibernate-mapping>